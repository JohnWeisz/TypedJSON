{
  "name": "typedjson",
  "version": "1.6.0-rc2",
  "description": "Typed JSON parsing and serializing for TypeScript that preserves type information, using decorators. Parse JSON into actual class instances.",
  "main": "./js/typedjson.js",
  "typings": "./js/typedjson.d.ts",
  "size-limit": [
    {
      "path": "js/typedjson.js",
      "limit": "6.5 KB"
    }
  ],
  "scripts": {
    "lint": "eslint \"spec/**/*.ts\" \"src/**/*.ts\"",
    "test": "yarn run build && nyc ts-node --project tsconfig/tsconfig.spec.json node_modules/jasmine/bin/jasmine.js",
    "build": "webpack",
    "preversion": "yarn test",
    "version": "yarn run build && git add -A js",
    "size": "size-limit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JohnWhiteTB/TypedJSON.git"
  },
  "author": "John White",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JohnWhiteTB/TypedJSON/issues"
  },
  "homepage": "https://github.com/JohnWhiteTB/TypedJSON",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@matthiaskunnen/eslint-config-typescript": "^1.2.0",
    "@size-limit/preset-small-lib": "^4.5.7",
    "@types/jasmine": "^3.5.3",
    "eslint-plugin-jasmine": "^4.1.1",
    "husky": "^4.2.5",
    "jasmine": "^3.5.0",
    "lint-staged": "^10.2.13",
    "nyc": "^15.0.0",
    "reflect-metadata": "^0.1.13",
    "size-limit": "^4.5.7",
    "source-map-support": "^0.5.16",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.41.5",
    "webpack-auto-inject-version": "^1.2.2",
    "webpack-cli": "^3.3.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "files": [
    "js"
  ]
}
